.userinfo-box {
  display: flex;
  padding: 100px 0 30px;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 30rpx;
  color: #aaa;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.btn-form-team {
  margin: 50rpx;
}